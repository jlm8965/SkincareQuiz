{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ skincare.name }} -
            {% if skincare.sensitiveSkin%}
            true
            {% else %}
            false
            {%endif%}
        </h2>
        <h3>Name: {{ skincare.name }}</h3>
        <h6>Body: {{ skincare.skinConcern }}</h6>
        {% if skincare.owner == userId %}
        <div class="btn-group">

            <a href="/skincares/{{ skincare.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/skincares/{{ skincare.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}